
function upperCaseWord(sentence) {

  // 1) Initialize the answer 
  var answer = "";
  
  // 2) Funtion to split the sentence
 var splitSentence =  sentence.split(" ");
 
  // 3) Declare the array
  for (var i = 0; i < splitSentence.length; i++){
  
    // 4) Intialize the sentence and uppercase
    answer += splitSentence[i].charAt(0).toUpperCase() +
      splitSentence[i].substring(1);
      
    // 5) Intialize split the sentence 
    if (i != splitSentence.length -1){
      answer+= " ";
    }
  }// 6) Return the answer 
  return answer;
}
console.log(upperCaseWord(" my name is sivashankari"));
